{
  "name": "@nextcloud/event-bus",
  "version": "3.3.1",
  "description": "A simple event bus to communicate between Nextcloud components.",
  "keywords": [
    "nextcloud"
  ],
  "homepage": "https://github.com/nextcloud/nextcloud-event-bus#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextcloud/nextcloud-event-bus"
  },
  "license": "GPL-3.0-or-later",
  "author": "Christoph Wurst",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "vite --mode production build",
    "build:doc": "typedoc --out dist/doc lib/index.ts && touch dist/doc/.nojekyll",
    "dev": "vite --mode development build --watch",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest run --watch"
  },
  "prettier": "@nextcloud/prettier-config",
  "dependencies": {
    "@types/node": "^20.14.12",
    "semver": "^7.6.3"
  },
  "devDependencies": {
    "@nextcloud/eslint-config": "^8.4.1",
    "@nextcloud/prettier-config": "^1.1.0",
    "@nextcloud/vite-config": "^2.3.0",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "happy-dom": "^15.11.7",
    "prettier": "^3.3.3",
    "typedoc": "^0.27.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.11",
    "vitest": "^2.0.3"
  },
  "engines": {
    "node": "^20.0.0",
    "npm": "^10.0.0"
  }
}
