{
  "name": "@nextcloud/event-bus",
  "version": "3.3.3",
  "description": "A simple event bus to communicate between Nextcloud components.",
  "keywords": [
    "nextcloud"
  ],
  "homepage": "https://github.com/nextcloud/nextcloud-event-bus#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/nextcloud/nextcloud-event-bus"
  },
  "license": "GPL-3.0-or-later",
  "author": "Nextcloud GmbH and Nextcloud contributors",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "build": "vite --mode production build",
    "build:doc": "typedoc --out dist/doc lib/index.ts && touch dist/doc/.nojekyll",
    "dev": "vite --mode development build",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest run --watch",
    "watch": "npm run dev -- --watch"
  },
  "prettier": "@nextcloud/prettier-config",
  "dependencies": {
    "@types/semver": "^7.7.0",
    "semver": "^7.7.2"
  },
  "devDependencies": {
    "@nextcloud/eslint-config": "^8.4.2",
    "@nextcloud/prettier-config": "^1.2.0",
    "@nextcloud/vite-config": "^2.3.5",
    "@types/node": "^24.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "happy-dom": "^18.0.1",
    "prettier": "^3.5.3",
    "typedoc": "^0.28.5",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vitest": "^3.0.7"
  },
  "engines": {
    "node": "^20 || ^22 || ^24"
  },
  "devEngines": {
    "packageManager": {
      "name": "npm",
      "onFail": "error",
      "version": "^11.5.0"
    },
    "runtime": {
      "name": "node",
      "onFail": "error",
      "version": "^24.0.0"
    }
  }
}
